		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"vite": "^6.3.6",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"drizzle-orm": "^0.40.1",
		"drizzle-seed": "^0.3.1",
		"postgres": "^3.4.7",
